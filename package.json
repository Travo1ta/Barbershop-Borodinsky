    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "del": "^7.1.0",
    "gulp": "4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^9.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^5.0.0",
    "postcss": "8.3.11",
    "postcss-csso": "^6.0.1",
    "stylelint": "^14.0.0",
    "stylelint-config-htmlacademy": "0.1.11"
